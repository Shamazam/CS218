<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="AdminAddShelter.AddShelterActivity">

    <!-- Toolbar with a back button and centered title -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Add Shelter Location"
        app:titleTextColor="@android:color/black"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView to allow scrolling the entire screen -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Shelter Name -->
            <EditText
                android:id="@+id/shelter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shelter Name"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"/>

            <!-- Person in Charge -->
            <EditText
                android:id="@+id/person_in_charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Person in Charge"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"/>

            <!-- Primary Contact -->
            <EditText
                android:id="@+id/primary_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Primary Contact"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"/>

            <!-- Secondary Contact -->
            <EditText
                android:id="@+id/secondary_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Secondary Contact"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"/>

            <!-- Street Address -->
            <EditText
                android:id="@+id/street_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street Address"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"/>

            <!-- Town -->
            <EditText
                android:id="@+id/town"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Town"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"/>

            <!-- City -->
            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"/>

            <!-- Region -->
            <EditText
                android:id="@+id/region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Region"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"/>

            <!-- Google Map inside FrameLayout -->
            <FrameLayout
                android:id="@+id/map_container"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <fragment
                    android:id="@+id/mapFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

            <!-- Capacity -->
            <EditText
                android:id="@+id/capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Capacity"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"/>

            <!-- Submit Button -->
            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/logoBlue"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
