<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Main content inside the DrawerLayout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- App Header: Logo, Title, Profile Icon, and Bell Icon with Badge -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <!-- App Logo -->
                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="App Logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- App Title -->
                <TextView
                    android:id="@+id/headingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ReadyFiji"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/logoOrange"
                    app:layout_constraintStart_toEndOf="@id/appLogo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp" />

                <!-- Bell Icon with Badge -->
                <RelativeLayout
                    android:id="@+id/bellIconLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/profileIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:id="@+id/notificationBellIcon"
                        app:tint="@color/logoBlue"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_notification_bell"
                        android:contentDescription="Notification Bell Icon"
                        android:onClick="openNotifications" />

                    <!-- Badge (number of unread notifications) -->
                    <TextView
                        android:id="@+id/badgeCount"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignEnd="@+id/notificationBellIcon"
                        android:layout_alignTop="@+id/notificationBellIcon"
                        android:background="@drawable/badge_background"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="0"
                        android:visibility="gone" />
                </RelativeLayout>

                <!-- Profile Icon: CircularImageView (using the circular image library or ImageView) -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileIcon"
                    app:tint="@color/logoBlue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="Profile Icon"
                    android:onClick="openDrawer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- News container with background color -->
            <LinearLayout
                android:id="@+id/newsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#f0f0f0"
                android:padding="16dp"
                android:orientation="vertical">

                <!-- News Alerts Title -->
                <TextView
                    android:id="@+id/newsAlertsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="News Alerts"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/logoOrange"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Fixed-size container for image or description -->
                <FrameLayout
                    android:id="@+id/fixedSizeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="16dp">

                    <!-- News Image -->
                    <ImageView
                        android:id="@+id/latestUpdateImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:contentDescription="Latest Update Image"
                        android:visibility="gone" />

                    <!-- News Description -->
                    <TextView
                        android:id="@+id/latestUpdateDescription"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:visibility="gone" />
                </FrameLayout>

                <!-- News Title -->
                <TextView
                    android:id="@+id/latestUpdateTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retrieving Alerts"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- GridLayout for the 3x2 grid of icons -->
            <GridLayout
                android:id="@+id/iconGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="3"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- Container for To-Do List icon -->
                <LinearLayout
                    android:background="@drawable/rounded_corners"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        app:tint="@color/white"
                        android:id="@+id/todoListIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_todolist"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To-Do List"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Container for Shelter Locations icon -->
                <LinearLayout
                    android:background="@drawable/rounded_corners"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        app:tint="@color/white"
                        android:id="@+id/shelterLocationsIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_shelter"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shelter Locations"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Container for Live Tracking icon -->
                <LinearLayout
                    android:background="@drawable/rounded_corners"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        app:tint="@color/white"
                        android:id="@+id/liveTrackingIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_map"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disaster Map"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Container for Emergency Contacts icon -->
                <LinearLayout
                    android:background="@drawable/rounded_corners"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/emergencyContactsIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:tint="@color/white"
                        android:src="@drawable/ic_emergency_contacts"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Contacts"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Container for Quick Links icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_corners"
                    android:layout_margin="8dp">

                    <ImageView
                        app:tint="@color/white"
                        android:id="@+id/quickLinksIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_quick_links"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Links"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Container for About Us icon -->
                <LinearLayout
                    android:background="@drawable/rounded_corners"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        app:tint="@color/white"
                        android:id="@+id/aboutUsIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_about_us"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Us"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
