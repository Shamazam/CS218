<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="AdminHomeScreen.AdminDashBoardActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Main Content (Your Dashboard Layout) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header Layout: Logo, Title, and User Icon -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/white">

                <!-- App logo on the left -->
                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="App Logo"
                    android:layout_marginEnd="16dp" />

                <!-- Dashboard Title in the center -->
                <TextView
                    android:id="@+id/dashboardTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Admin Dashboard"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="center" />

                <!-- User icon on the right (Opens Navigation Drawer) -->
                <ImageView
                    android:id="@+id/userIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="User Icon"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Add Disaster Tips Button -->
            <Button
                android:id="@+id/addTipsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Manage Disaster Tasks"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/logoBlue"
                app:layout_constraintTop_toBottomOf="@+id/headerLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp" />

            <!-- Add Shelter Locations Button -->
            <Button
                android:id="@+id/addShelterButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add Shelter Locations"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/logoBlue"
                app:layout_constraintTop_toBottomOf="@+id/addTipsButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" />

            <!-- Add Emergency Contacts Button -->
            <Button
                android:id="@+id/addContactsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add Emergency Contacts"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/logoBlue"
                app:layout_constraintTop_toBottomOf="@+id/addShelterButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" />

            <!-- Send Notification Button -->
            <Button
                android:id="@+id/sendNotificationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Manage Notification"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/logoBlue"
                app:layout_constraintTop_toBottomOf="@+id/addContactsButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" />

            <!-- Send Alert Button -->
            <Button
                android:id="@+id/sendAlertButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Manage Alert"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/logoBlue"
                app:layout_constraintTop_toBottomOf="@+id/sendNotificationButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" />

            <!-- Change Shelter Capacity Button -->
            <Button
                android:id="@+id/changeShelterCapacityButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Change Shelter Capacity"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/logoBlue"
                app:layout_constraintTop_toBottomOf="@+id/sendAlertButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" />

            <!-- Manage Shelters Button -->
            <Button
                android:id="@+id/manageSheltersButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Manage Shelters"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/logoBlue"
                app:layout_constraintTop_toBottomOf="@+id/changeShelterCapacityButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" />

            <!-- Manage Emergency Contacts Button -->
            <Button
                android:id="@+id/manageEmergencyContactsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Manage Emergency Contacts"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/logoBlue"
                app:layout_constraintTop_toBottomOf="@+id/manageSheltersButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" />

            <!-- Manage Quick Links Button -->
            <Button
                android:id="@+id/manageQuickLinksButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Manage Quick Links"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/logoBlue"
                app:layout_constraintTop_toBottomOf="@+id/manageEmergencyContactsButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" />

            <!-- Manage Flooding Zones Button -->
            <Button
                android:id="@+id/manageFloodingZonesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Manage Flooding Zones"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/logoBlue"
                app:layout_constraintTop_toBottomOf="@+id/manageQuickLinksButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/admin_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
