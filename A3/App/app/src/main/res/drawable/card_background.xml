<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow/elevation layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Light shadow color -->
            <corners android:radius="12dp" /> <!-- Rounded corners for shadow -->
        </shape>
    </item>

    <!-- Main card layer -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Card background color -->
            <corners android:radius="12dp" /> <!-- Rounded corners for the card -->
        </shape>
    </item>

</layer-list>
